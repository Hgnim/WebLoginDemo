@page
@using WebLoginDemo.Areas.Account.Pages
@model RegisterModel
@{
    ViewData["Title"] = "注册";
}

<h1>注册新的账户</h1>
<hr />
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" role="alert"></div>
    <div>
        <label asp-for="Input.UserName">用户名</label>
        <input asp-for="Input.UserName" autocomplete="username" aria-required="true" placeholder="设置唯一用户名" />        
        <span asp-validation-for="Input.UserName"></span>
    </div>
    <div>
        <label asp-for="Input.Password">密码</label>
        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="设置密码" />        
        <span asp-validation-for="Input.Password"></span>
    </div>
    <div>
        <label asp-for="Input.ConfirmPassword">确认密码</label>
        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="再次输入密码" />        
        <span asp-validation-for="Input.ConfirmPassword"></span>
    </div>
    <div>
        <label asp-for="Input.InviteCode">邀请码</label>
        <input asp-for="Input.InviteCode" aria-required="true" placeholder="请输入邀请码" />
		<span asp-validation-for="Input.InviteCode"></span>
    </div>
    <button id="registerSubmit" type="submit">注册</button>
</form>